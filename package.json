{
  "name": "churrasapp",
  "version": "1.0.0",
  "description": "ChurrasApp - Aplicação para organização de churrascos com gestão de convidados e custos",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "npm run start --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "test": "npm run test --workspaces",
    "test:web": "npm run test --workspace=apps/web",
    "test:api": "npm run test --workspace=apps/api",
    "install:all": "npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "start": "npm run start --workspace=apps/api",
    "start:api": "npm run start --workspace=apps/api",
    "docker:up": "docker compose --env-file .env.docker up",
    "docker:up:build": "docker compose --env-file .env.docker up --build",
    "docker:down": "docker compose down",
    "docker:down:clean": "docker compose down -v --remove-orphans",
    "docker:logs": "docker compose logs -f",
    "docker:logs:api": "docker compose logs -f api",
    "docker:logs:db": "docker compose logs -f mongodb",
    "docker:rebuild": "docker compose down && docker compose --env-file .env.docker up --build",
    "docker:shell:api": "docker compose exec api sh",
    "docker:shell:db": "docker compose exec mongodb mongosh",
    "docker:test:api": "docker compose exec api npm test",
    "docker:health": "docker compose ps"
  },
  "keywords": [
    "churrasapp",
    "react",
    "express",
    "nodejs",
    "monorepo",
    "event-management"
  ],
  "author": "ChurrasApp Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/churrasapp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/churrasapp/issues"
  },
  "homepage": "https://github.com/your-org/churrasapp#readme"
}
