# ChurrasApp Docker Environment Variables
# Used by docker-compose.yml for container configuration

# ===== MONGODB CONFIGURATION =====
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=churrasapp123
MONGO_DB_NAME=churrasapp
MONGODB_URI=mongodb://mongodb:27017/churrasapp

# ===== API CONFIGURATION =====
NODE_ENV=development
PORT=3000
API_HOST=0.0.0.0

# ===== NETWORK CONFIGURATION =====
# MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017

# API
API_PORT=3000
API_EXTERNAL_PORT=3000

# Web Frontend
WEB_PORT=3000
WEB_EXTERNAL_PORT=3001
REACT_APP_API_URL=http://localhost:3000

# ===== DOCKER NETWORK =====
NETWORK_SUBNET=172.20.0.0/16

# ===== DEVELOPMENT SETTINGS =====
# Enable debug logging
DEBUG=churrasapp:*

# Hot reload settings
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# ===== HEALTH CHECK SETTINGS =====
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s